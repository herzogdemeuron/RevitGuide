<Window x:Class="RevitGuide.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitGuide.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:SettingsViewModel, IsDesignTimeCreatable=True}"
        Title="Tab Settings" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
            
        <Grid.RowDefinitions>
            
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="TabSettingsDataGrid"
                    Grid.Row="0"
                    Grid.Column="2"
                  ItemsSource="{Binding TabSettings,Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True" 
                  MouseLeftButtonDown="DataGridMouseLeftButtonUp" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tab Name" Binding="{Binding TabName}" Width="*"/>
                <DataGridTextColumn Header="Tab URL" Binding="{Binding TabUrl}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="ConfirmButton"
                    Content="Confirm"
                    Width="40"
                    Margin="0,0,10,0"
                    Click="ConfirmButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="40" 
                    Click="CancelButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Vertical"
                    VerticalAlignment="Center">
            <StackPanel Margin="0,0,0,20">
                <Button x:Name="AddButton" Content="+" Margin="0,0,0,5"/>
                <Button x:Name="RemoveButton" Content="-"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="UpButton" Content="^" Margin="0,0,0,5"/>
                <Button x:Name="DownButton" Content="v"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
